{
  "compilerOptions": {
    "target": "ESNext",
    "module": "NodeNext",
    "allowJs": true,
    "checkJs": true,
    "lib": [
      "ES2020"
    ],
    "noEmit": true,
    "moduleResolution": "NodeNext",
    "rootDir": "lib",
    // stripInternal doesn't work for non .ts files
    "stripInternal": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitThis": true,
    "useUnknownInCatchVariables": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "skipLibCheck": true,
  },
  "include": ["lib"],
}
